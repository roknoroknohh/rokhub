# ============================================
# إعدادات ROKhub - منصة الألعاب الرقمية
# ============================================

# بيئة التشغيل (development/production)
FLASK_ENV=development

# المفتاح السري (غيّره في الإنتاج!)
SECRET_KEY=your-super-secret-key-change-this-in-production

# قاعدة البيانات
DATABASE_URL=sqlite:///rokhub.db

# كلمة مرور الأدمن
ADMIN_PASSWORD=your-secure-admin-password

# روابط التواصل الاجتماعي
INSTAGRAM_LINK=https://www.instagram.com/your_account
TELEGRAM_LINK=https://t.me/your_channel

# إعدادات البريد (اختياري)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# إعدادات الموقع
SITE_NAME=ROKhub
SITE_DESCRIPTION=أفضل منصة ألعاب رقمية عربية
